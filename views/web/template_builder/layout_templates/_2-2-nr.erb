<script type="text/html" id="editor-2-2-nr">
  <h3 class="title"><%= I18n.t 'template_tool.2_by_2_adjustable_lbl' %></h3>

  <div class="tab-content layout-content">
    <div class="form-horizontal">
      <%=
          render partial: 'web/template_builder/content_templates/controls/color_picker',
                 locals: {
                         label: I18n.t('template_tool.controls_bg_color_lbl'),
                         mapping: [
                                 {selector: 'tr:first', key: 'background-color'}
                         ]
                 }
      %>
      <%=
          render partial: 'web/template_builder/content_templates/controls/color_picker',
                 locals: {
                         label: I18n.t('template_tool.controls_content_bg_color_lbl'),
                         mapping: [
                                 {selector: '[data-type="structure"]', key: 'background-color'}
                         ]
                 }
      %>
    </div>
  </div>
  <button type="submit" class="btn btn-sky-blue close-btn" id="editor-save">Close</button>
</script>