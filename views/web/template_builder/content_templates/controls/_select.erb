<div class="builder-form-group row select">
  <label for="input-align-" class="col-sm-4 control-label"><%= label %></label>

  <div class="col-sm-8 input">
    <div class="row">
      <select class="form-control input-sm selectpicker" id="<%= id %>" data-type="editor-control" data-selector="<%= mapping[0][:selector] %>" data-category="<%= mapping[0][:category] %>" data-key="<%= mapping[0][:key] %>">
        <% if options.instance_of? Array %>
            <% options.each do |opt| %>
                <option><%= opt %></option>
            <% end %>
        <% else #For social content dump raw string %>
        <%= raw options %>
        <% end %>
      </select>
    </div>
  </div>
</div>